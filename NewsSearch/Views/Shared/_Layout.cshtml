<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="" />
    <title>@ViewBag.SiteName@ViewBag.Title</title>
    @Styles.Render("~/content/css")
    @Styles.Render("~/content/css/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="body-content">
        <div class="top-bar"></div>
        <div class="main-content">
            @RenderBody()
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Powered by GTPool | <a href="https://uk.linkedin.com/in/drviana" target="_blank">contact</a></p>
        </footer>
    </div>
    <div class="hidden">
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/sitescripts")
        @RenderSection("scripts", required: false)
        @Html.Partial("_GoogleAnalytics")
    </div>
</body>
</html>
